       function increment(itemId){
     
       
           $.ajax({
            url:'/productIncremenet',
            method:'POST',
            data:{
                itemId:itemId
            },
            success:function(response){

                if(response.status){
                    Swal.fire(response.message)
                }
                if(response.success){
                    var updatedCart=response.updatedCart
                    var totalPrice=response.individualTotal;
                    var grandTotal=response.totalPrice;

                     $('#current' + itemId).text(updatedCart);
                     $('#price'+ itemId).text(totalPrice);
                     $('#subtotal').text(grandTotal)
                     $('#total').text(grandTotal)
                }
                
            }
           })
       }

       function decrement(itemId){
          
          $.ajax({
            url:'/productDecrement',
            method:'POST',
            data:{
                itemId:itemId
            },
            success:function(response){
                var updatedCart=response.updatedCart;
                var totalPrice=response.individualTotal;
                var grandTotal=response.totalPrice;
                $('#current'+itemId).text(updatedCart)
                $('#price'+itemId).text(totalPrice)
                $('#subtotal').text(grandTotal)
                $('#total').text(grandTotal)

            }
          })
       }


     function deleteProduct(cartId, proId, quantity) {
  Swal.fire({
    title: 'Are you sure?',
    text: "You won't be able to revert this!",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, delete it!',
    timer: 3000
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        url: '/delete-product-cart',
        method: 'DELETE',
        data: {
          cartId: cartId,
          proId: proId,
          quantity: quantity
        },
        success: function (response) {
          if (response.status) {
            // Reload the page or update the UI as needed
            location.reload();
          }
        }
      });
    }
  });
}




