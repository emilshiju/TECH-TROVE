    <script>

function addToWishList(ProId){
  
    event.preventDefault()
    $.ajax({
        url:"/add-to-Wishlist",
        method:"POST",
        data:{
            ProId:ProId
        },
        success:(response)=>{
            if(response.status == false){
                Swal.fire(response.message)
            }else if(response.status == true){
                Swal.fire(response.message)
            }else if(response.success == false){
                Swal.fire(response.message)
            }
        }
        
    })


}
    
    </script>
